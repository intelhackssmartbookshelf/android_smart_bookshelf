<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.books.share.smartbookshelf.ui.AddBookActivity">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
                android:id="@+id/add_book_img"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:src="@mipmap/no_cover_thumb"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"/>

        <TextView
                android:id="@+id/add_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Power of money [Free] Power of Money "
                android:layout_toRightOf="@id/add_book_img"
                android:layout_margin="10dp"
                android:textSize="17dp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="#000"/>

        <TextView
                android:id="@+id/add_book_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/add_book_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="11dp"
                android:text="@string/app_name"
                android:textColor="#000"
                android:layout_below="@id/add_book_title"/>

        <TextView
                android:id="@+id/add_book_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/add_book_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="11dp"
                android:text="VeryVery good"
                android:layout_below="@id/add_book_authors"/>

        <TextView
                android:id="@+id/add_book_publishdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/add_book_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="11dp"
                android:text="VeryVery good"
                android:layout_below="@id/add_book_publisher"/>

        <View
                android:layout_height="2px"
                android:layout_width="match_parent"
                android:background="#afafaf"
                android:id="@+id/add_book_sep_shelf"
                android:layout_below="@id/add_book_publishdate"
                android:layout_margin="10dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_book_sep_shelf"
                android:id="@+id/add_book_inform"
                android:layout_marginLeft="10dp"
                android:text="Book Position"/>

        <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:id="@+id/add_book_location_book"
                android:layout_height="80dp"
                android:layout_below="@id/add_book_inform"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                app:columnCount="10">

            <TextView
                    android:id="@+id/add_book_location_1"
                    android:text="1"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <TextView
                    android:id="@+id/add_book_location_2"
                    android:text="2"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <TextView
                    android:id="@+id/add_book_location_3"
                    android:text="3"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <TextView
                    android:id="@+id/add_book_location_4"
                    android:text="4"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <TextView
                    android:id="@+id/add_book_location_5"
                    android:text="5"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <TextView
                    android:id="@+id/add_book_location_6"
                    android:text="6"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <TextView
                    android:id="@+id/add_book_location_7"
                    android:text="7"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <TextView
                    android:id="@+id/add_book_location_8"
                    android:text="8"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
            <!--android:background="#cecccc"-->

            <TextView
                    android:id="@+id/add_book_location_9"
                    android:text="9"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <TextView
                    android:id="@+id/add_book_location_10"
                    android:text="10"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
        </android.support.v7.widget.GridLayout>

        <View
                android:layout_height="2px"
                android:layout_width="match_parent"
                android:background="#afafaf"
                android:id="@+id/add_book_sep_shelf1"
                android:layout_below="@id/add_book_location_book"
                android:layout_margin="10dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="desc"
                android:id="@+id/add_book_desc"
                android:layout_below="@id/add_book_sep_shelf1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</ScrollView>
